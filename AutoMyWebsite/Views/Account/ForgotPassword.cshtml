        <main class="my-form">
            <div class="cotainer">
                <div class="row justify-content-center" style="padding: 0; margin: 0;">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header " style="color: orange;font-size: 20px;"> <span class="display-4"> AutoMy </span>- პაროლის აღდგენა </div>
                            <div class="card-body">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label text-md-right">გთხოვთ შეიყვანეთ თქვენი იმეილი რათა აღვადგინოთ თქვენი ანგარიში</label>
                                        <div class="col-lg-6">
                                            <input type="email" id="EmailInput" name="email" class="form-control" placeholder="Email">
                                        </div>
                                    </div>

                                    <div class="col-md-6 offset-md-2">
                                        <button onclick="Send()" class="btn btn-warning my_btn" style="margin-top: 25px; margin-bottom: 25px!important; border-radius: 25px; margin-right: 5px;"> გაგზავნა</button>
                                        <a href="/Account/SignIn" class="btn btn-outline-secondary" style="border-radius: 25px;">უკან</a>
                                        <p style="margin-top:15px;margin-bottom:15px;" id="ErrorMessage" , class="text-danger"></p>

                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main>


        <script>
            function Send() {
                var UserEmail = document.querySelector("#EmailInput").value;
                $.ajax({
                    url: "/Account/SendVeryficationCode?email=" + UserEmail,
                    //data: { email: document.querySelector("#EmailInput").value },
                    success: function (result) {
                        if (result != "success")
                            document.querySelector("#ErrorMessage").textContent = result;
                        else
                            window.location.href = "/Account/EnterVerificationCode?mail=" + UserEmail;
                    }
                });
            }
        </script>
    </body>
