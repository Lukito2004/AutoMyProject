    <main class="my-form">
        <div class="cotainer">
            <div class="row justify-content-center" style="padding: 0; margin: 0;">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header " style="color: orange;font-size: 20px;"> <span class="display-4"> AutoMy </span>- პაროლის აღდგენა </div>
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label text-md-right">ახალი პაროლი</label>
                                <div class="col-lg-6">
                                    <input type="password" id="NewPassword" class="form-control" placeholder="New Password">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label text-md-right">გაიმეორეთ ახალი პაროლი</label>
                                <div class="col-lg-6">
                                    <input type="password" id="NewPasswordRepeat"  class="form-control" placeholder="Repeat New Password">
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-2">
                                <button onclick="ChangePasswordOnButtonClick()" class="btn btn-warning my_btn" style="margin-top: 25px; margin-bottom: 25px!important; border-radius: 25px; margin-right: 5px;"> გაგრძელება</button>
                                <a href="/Account/ForgotPassword" class="btn btn-outline-secondary" style="border-radius: 25px;">უკან</a>
                                <span style="margin-top:15px;margin-bottom:15px;" id="ErrorMessage" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>


    <script>
        function ChangePasswordOnButtonClick()
        {
            var newPassword = document.querySelector("#NewPassword").value;
            var newPasswordRepeat = document.querySelector("#NewPasswordRepeat").value;
            var ErrorMessage = document.querySelector("#ErrorMessage");
            if (newPassword === null || newPassword === "" || newPasswordRepeat === null || newPasswordRepeat === "")
                ErrorMessage.textContent = "გთხოვთ შეავსეთ პაროლები";
            else if (newPassword != newPasswordRepeat)
                ErrorMessage.textContent = "გთხოვთ გადაამოწმეთ პაროლები";
            else if (newPassword == newPasswordRepeat)
            {
                $.ajax({
                    type: "POST",
                    url: "/Account/ChangePassword",
                    data: { email: "@Model", password: document.querySelector("#NewPassword").value },
                    success: function ()
                    {
                        window.location.href = "/Account/ToMyPage";
                    }
                });
            }
        }
    </script>
</body>

