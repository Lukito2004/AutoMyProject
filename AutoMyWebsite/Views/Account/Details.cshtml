@model AutoMyWebsite.Models.AccountViewModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body, html {
        width: 100%;
        height: 100vh;
        background-color: #F5F5F5;
    }

    .img {
        max-width: 100%;
    }
</style>
<div class="container" style="background-color: #fff;border-radius: 5px;">

    <div class="row " style="padding: 25px;">
        <div class="col-sm-3">
            @if (Model.ImageUrl != null)
            {
                <img class="img rounded" src="@Model.ImageUrl" width="200" />
            }
            else
            {
                <img src="~/Source/user-default.jpg" class="img rounded" width="200" />
            }

        </div>
        <div class="col-sm-8 ">
            <div class="d-flex justify-content-start align-items-center h-100">
                <div>

                    <h4> @Model.Username </h4>
                    <h5> @Model.FirstName @Model.LastName</h5>
                    <h5> @Model.PhoneNumber </h5>
                    <h5> @Model.DateOfBirth </h5>
                </div>

            </div>

        </div>
        <div class="col-sm-12">
            <a href="#" class="btn btn-outline-secondary w-100" style="margin-top:25px;"> შეცვალე შენი პროფილი </a>
            <a href="/Account/" class="btn btn-outline-secondary w-100" style="margin-top:25px;"> უკან </a>

        </div>

    </div>

</div>

