@model string
@{
    ViewData["Title"] = "EnterVerificationCode";
}

    <head>

        <style>

            body, html {
                width: 100%;
                height: 100%;
                padding: 0px;
                margin: 0px;
                background-color: #F5F5F5;
            }

            input {
                margin-bottom: 20px;
            }
        </style>
    </head>
<body>
    @*<div>
        <h4>თქვენ მოგივიდათ ვერიფიკაციის კოდი Gmail-ზე, ჩაიწერეთ კოდი და ჩაწერეთ.</h4>
        <input type="number" id="verificationId" name="verificationCode" />
        <span id="ErrorMessage" class="text-danger"></span>
        <button onclick="GoToChangePassword()" class="btn btn-outline-success">პაროლის აღდგენა</button>
    </div>*@


    <main class="my-form">
        <div class="cotainer">
            <div class="row justify-content-center" style="padding: 0; margin: 0;">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header " style="color: orange;font-size: 20px;"> <span class="display-4"> AutoMy </span>- პაროლის აღდგენა </div>
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label text-md-right">თქვენ მოგივათ ვერიფიკაციის კოდი Gmail-ზე, რომელიც უნდა შეიყვანოთ მოცემულ ველში.</label>
                                <div class="col-lg-6">
                                    <input type="number" id="verificationId" name="verificationCode" class="form-control" placeholder="Code">
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-2">
                                <button onclick="GoToChangePassword()" class="btn btn-warning my_btn" style="margin-top: 25px; margin-bottom: 25px!important; border-radius: 25px; margin-right: 5px;"> გაგრძელება</button>
                                <a href="/Account/ForgotPassword" class="btn btn-outline-secondary" style="border-radius: 25px;">უკან</a>
                                <span  style="margin-top:15px;margin-bottom:15px;" id="ErrorMessage" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>


    <script>
        function GoToChangePassword()
        {
            $.ajax({
                url: "/Account/CheckVerificationCode?verificationCode=" + parseInt(document.querySelector("#verificationId").value) + "&Email=@Model",
                success: function (result)
                {
                    if (result == "success")
                        window.location.href = "/Account/ChangePassword?mail=@Model";
                    else
                        document.querySelector("#ErrorMessage").textContent = result;
                }
            });
        }
    </script>
</body>


