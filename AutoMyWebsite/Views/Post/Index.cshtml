@model List<PostViewModel>
@{
    ViewData["Title"] = "Index";
}

<style>
    .PostSection {
        width: 100%;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .PostDiv {
        width: 250px;
        border: 1px solid steelblue;
        padding-bottom: 10px;
        margin-top: 20px;
    }

    .PostDiv p, .PostDiv a {
        margin-left: 10px;
    }

    .PostDiv img {
        width: 100%;
        height: 150px;
    }
</style>
<body onload="OnBodyLoad()">
    <div class="d-flex justify-content-center">

        <form asp-action="Filter" asp-controller="Post" method="post">
            <div class="row" style="margin:0px;padding:0px;">
                <div class="col-lg-3">
                    <h5 style="margin-left: 5px;margin-top:10px; margin-bottom:10px;">Category:</h5>
                    <select name="categoryId" class="custom-select mb-3">
                        <option value=1>Economy</option>
                        <option value=2>Compact</option>
                        <option value=3>Compact Cambrio</option>
                        <option value=4>Intermediate Combi</option>
                        <option value=5>Luxury Car</option>
                        <option value=6>Luxury Convertible</option>
                        <option value=7>SUV</option>
                        <option value=8>Off Road 4x4</option>
                        <option value=9>Pick-up Car</option>
                    </select>
                </div>
                <div class="col-lg-3">
                        <h5 style="margin-left: 5px;margin-top:10px; margin-bottom:10px;">Costs More Than:</h5>
                    <div class="form-group">

                        <input type="number"  class="form-control" name="GreaterThanMoney" />
                    </div>

                </div>
                <div class="col-lg-3">
                        <h5 style="margin-left: 5px;margin-top:10px; margin-bottom:10px;">Costs Less Than:</h5>
                    <div class="form-group">
                        <input type="number"  class="form-control" name="LessThanMoney" />
                    </div>
                </div>
                    <div class="col-lg-3 d-flex align-items-center" >

                        <input type="submit" value="Filter" class="btn btn-outline-secondary btn-md" style="margin-left: 10px;margin-top:28px;" />

                    </div>
                </div>
        </form>
    </div>

    <section class="PostSection">
        @foreach (var post in Model)
        {
            <div class="PostDiv" id=@post.CategoryId>
                @*<img src=@post.ImageUrl />*@
                @*<p class="PostName">@post.Name</p>*@
                <p id="CategoryId"></p>
                <p class="PostPrice">Price: @post.Price$</p>
                <p class="PostCompany">Company: @post.Company</p>
                <p class="PostModel">Model: @post.Model</p>
                <p class="PostPublishingYear">Year: @post.PublishingYear</p>
                <a class="btn btn-primary" href=@Url.Action("Details", "Post", new { Postid = post.Id })>Details</a>
            </div>
        }
    </section>

    <script>
        var Divs = document.querySelectorAll(".PostDiv");
        var Counter = 0;
        function OnBodyLoad() {
            Divs.forEach(o => {
                var categoryId = o.getAttribute("id");
                $.ajax({
                    url: "/Post/ReturnCategory",
                    data: { CategoryId: categoryId },
                    success: function (result) {
                        debugger;
                        o.querySelector("#CategoryId").textContent = "Category: " + result;
                    }
                });
            });
        }
    </script>
</body>
