<style>
    .PostSection {
        width: 100%;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around; 
        padding-bottom: 45px;
        margin-top: 20px;
    }

    .PostDiv {
        width: 250px;
        padding-top: 7px;
        border: 1px solid steelblue;
        padding-bottom: 10px;
        margin-top: 20px;
    }

    .PostDiv p, .PostDiv a {
        margin-left: 10px;
    }

    .PostDiv img {
        width: 98%;
        height: 150px;
        margin: auto;
    }
    .value {
        width: 100%;
        text-align: center;
    }

    .my-values {
        height: 40px;
        width: 250px;
        max-width: 100%;
        color: green;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 0 0 5px 5px;
    }

    .my-value {
        text-align: center;
        width: 240px;
        max-width: 100%;
        color: rgb(0, 217, 255);
        margin-top: 10px;
        margin-bottom: 10px;
        /* background-color: rgb(0, 0, 0); */
        border-radius: 5px 5px 0 0;
    }

    .my-col {
        margin: 25px;
        display: flex;
        justify-content: center;
    }

    .row {
        display: flex;
        justify-content: center;
    }

    .car-info {
        width: 91%;
        margin: auto;
    }

</style>
<body style="background-color: #edeef0;">
    <div class="d-flex justify-content-center">

        <form asp-action="Filter" asp-controller="Post" method="post">
            <div class="row" style="margin:0px;padding:0px;">
                <div class="col-lg-2">
                    <h5 style="margin-left: 5px;margin-top:10px; margin-bottom:10px;">კატეგორია:</h5>
                    <select name="categoryId" class="custom-select mb-3">
                        <option value=1>Economy</option>
                        <option value=2>Compact</option>
                        <option value=3>Compact Cambrio</option>
                        <option value=4>Intermediate Combi</option>
                        <option value=5>Luxury Car</option>
                        <option value=6>Luxury Convertible</option>
                        <option value=7>SUV</option>
                        <option value=8>Off Road 4x4</option>
                        <option value=9>Pick-up Car</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <h5 style="margin-left: 5px;margin-top:10px; margin-bottom:10px;">ფასი-დან :</h5>
                    <div class="form-group">

                        <input type="number" class="form-control" name="GreaterThanMoney" />
                    </div>

                </div>
                <div class="col-lg-2">
                    <h5 style="margin-left: 5px;margin-top:10px; margin-bottom:10px;">ფასა-მდე :</h5>
                    <div class="form-group">
                        <input type="number" class="form-control" name="LessThanMoney" />
                    </div>
                </div>
                <div class="col-lg-2 d-flex align-items-center">

                    <input type="submit" value="გაფილტვრა" class="btn btn-outline-secondary btn-md" style="margin-left: 10px;margin-top:28px;" />

                </div>
                <div class="col-lg-2 d-flex align-items-center">

                    <a href="/Account/ToMyPage" class="btn btn-outline-info btn-md" style="margin-left: 10px;margin-top:28px;" />პროფილი</a>

                </div>
            </div>
        </form>
    </div>

