    <div class="container">
        <form asp-action="Edit" asp-controller="Post" method="post">
            <h1 class="titleofbuy"> 1. გარიგების ტიპი</h1>
            <hr>
            <h4 style="text-align: center;"> გარიგების ტიპი</h4>
            <div class="steeringWheelSide border border-top-0 ">
                <fieldset>
                    <div class="custom-control custom-radio" style="margin-bottom: 10px;">
                        <input type="radio" asp-for="buyType" value=@BuyType.იყიდება class="custom-control-input " id="category-Buy">
                        <label class="custom-control-label d-flex  justify-content-center" for="category-Buy">იყიდება</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" asp-for="buyType" value=@BuyType.ქირავდება class="custom-control-input" id="category-Hire">
                        <label class="custom-control-label d-flex  justify-content-center" for="category-Hire">ქირავდება</label>
                    </div>
                </fieldset>

                <hr>

                <h1 class="titleofbuy">2. ავტომობილის ძირითადი მახასიათებლები</h1>
