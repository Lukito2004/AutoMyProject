<body>
    <div class="container">
        <form asp-action="Create" asp-controller="Post" method="POST">
            <h1 class="titleofbuy"> 1. გარიგების ტიპი</h1>
            <hr>
            <h4 style="text-align: center;"> გარიგების ტიპი</h4>
            <div class="steeringWheelSide border border-top-0 ">
                <fieldset>
                    <div class="custom-control custom-radio" style="margin-bottom: 10px;">
                        <input type="radio" asp-for="buyType" value=@BuyType.იყიდება class="custom-control-input " id="category-Buy">
                        <label class="custom-control-label d-flex  justify-content-center" for="category-Buy">იყიდება</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" asp-for="buyType" value=@BuyType.ქირავდება class="custom-control-input" id="category-Hire">
                        <label class="custom-control-label d-flex  justify-content-center" for="category-Hire">ქირავდება</label>
                    </div>
                </fieldset>

                <hr>

                <h1 class="titleofbuy">2. ავტომობილის ძირითადი მახასიათებლები</h1>
                <hr>

                <div class="partofmain">


                    <div class="row">

                        <div class="col-sm-6 d-flex flex-column">
                                <p class="mrg"> კატეგორია :</p>
                            <label for="category">
                                @Html.DropDownListFor(o => o.CategoryId, Model.CategoryListItem, new { @class = "form-control" })
                            </label>
                            <p class="mrg"> პროდუსერი :</p>
                            <label for="producer">
                                <input type="text" asp-for="Company" id="producer" class="form-control" placeholder="Producer">
                            </label>
                            <p class="mrg"> მოდელი : </p>
                            <label for="model">
                                <input type="text" id="model" class="form-control" asp-for="Model" placeholder="Model">
                            </label>
                            <p class="mrg"> გამოშვების წელი : </p>
                            <label for="outputofyear">
                                <input type="number" id="outputofyear" class="form-control" asp-for="PublishingYear" placeholder="Publishing Year">
                            </label>
                            <p class="mrg"> გარბენი :</p>
                            <label for="Mileage">
                                <input type="number" id="Mileage" class="form-control" asp-for="Mileage" placeholder="Mileage">
                            </label>
                            <p class="mrg"> VIN კოდი : </p>
                            <label for="VinCode">
                                <input type="text" id="VinCode" class="form-control" asp-for="VinCode" placeholder="VIN Code">
                            </label>
                            <p class="mrg"> გადაცემის კოლოფი : </p>
                            <label for="gearbox">
                                <input type="text" class="form-control" id="gearbox" asp-for="GearBox" placeholder="Gear box">
                            </label>
                            <p class="mrg"> ძრავის მოცულობა :</p>
                            <input type="text" class="form-control" id="sizeofmotor" asp-for="VelocityOfEngine" placeholder="Size of motor">
                            <div class="d-flex" style="margin-top: 20px;margin-bottom: 20px;">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" class="custom-control-input" id="customCheck" asp-for="Turbo">
                                    <label class="custom-control-label" for="customCheck">ტურბო</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 d-flex flex-column">
                             <p class="mrg"> ცილინდრების რაოდენობა : </p>
                            <label for="barrel">
                               <input id="barrel" class="form-control" asp-for="Cilinders" placeholder="Barrel">
                            </label>
                            <p class="mrg"> კარები : </p>
                            <label for="door">
                                <input id="door" asp-for="Doors" class="form-control" placeholder="Door">
                            </label>
                            <p class="mrg"> საწვავის ტიპი :</p>
                            <label for="kindoffuel">
                                @Html.DropDownListFor(o => o.fuelType, Model.FuelListItem, new { @class = "form-control" })
                            </label>
                            <p class="mrg"> წამყვანი თვლები :</p>
                            <label for="drivewheels">
                                @Html.DropDownListFor(o => o.DriveWheels, Model.DriveWheelsListItem, new { @class = "form-control" })
                            </label>
                            <p class="mrg"> ფერი :</p>
                            <label for="color">
                                <input type="text" id="color" asp-for="Color" placeholder="Color " class="form-control">
                            </label>
                            <p class="mrg"> კაბინის ფერი :</p>
                            <label for="colorofcabin">
                                <input type="text" id="colorofcabin" class="form-control" asp-for="CabinColor" placeholder="Color of cabin">
                            </label>
                        </div>
                    </div>
                </div>
                <hr>

                <h1 class="titleofbuy">3. კომფორტი და სხვა მახასიათებლები</h1>
                <hr>

                <div class="comfortandother row">


                    <div class="firstside col-lg-4">
                        <h4 style="text-align: center;">საჭე</h4>
                        <fieldset>
                            <div class="steeringWheelSide border border-top-0 ">
                                <div class="custom-control custom-radio" style="margin-bottom: 10px;">
                                    <input type="radio" class="custom-control-input" asp-for="Wheel" value=@WheelType.მარცხენა id="customRadio" checked>
                                    <label class="custom-control-label d-flex  justify-content-center" for="customRadio" name="steering wheel">მარცხნივ</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" asp-for="Wheel" value=@WheelType.მარჯვენა id="customRadioRight">
                                    <label class="custom-control-label d-flex  justify-content-center" for="customRadioRight" name="steering wheel">მარჯვნივ</label>
                                </div>
                            </div>
                        </fieldset>
                        <div class="partofcar">
                            <div class="d-flex ">
                                <div class="custom-control custom-switch" style="margin-right: 25px;margin-bottom:20px;">
                                    <input asp-for="Hydraulics" type="checkbox" class="custom-control-input" id="hydraulic">
                                    <label class="custom-control-label" for="hydraulic">ჰიდრავლიკა</label>
                                </div>
                                <div class="custom-control custom-switch">
                                    <input asp-for="Disks" type="checkbox" class="custom-control-input" id="disk">
                                    <label class="custom-control-label" for="disk">დისკები</label>
                                </div>
                            </div>
                            <div class="custom-control custom-switch">
                                <input asp-for="ElectronicWindows" type="checkbox" class="custom-control-input" id="glass">
                                <label class="custom-control-label" for="glass"> ელ. შუშები</label>
                            </div>
                        </div>
                    </div>
                    <div class="secondside col-lg-4">
                        <div class="custom-control custom-switch">
                            <input asp-for="Hatch" type="checkbox" class="custom-control-input" id="sealingWax">
                            <label class="custom-control-label" for="sealingWax">ლუქი</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="LeatherSaloon" type="checkbox" class="custom-control-input" id="salonOfLeather">
                            <label class="custom-control-label" for="salonOfLeather">ტყავის სალონი</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="ClimateControl" type="checkbox" class="custom-control-input" id="weatherControl">
                            <label class="custom-control-label" for="weatherControl">კლიმატკონტროლი</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="ArmchairsHeating" type="checkbox" class="custom-control-input" id="hotOfSeat">
                            <label class="custom-control-label" for="hotOfSeat">სავარძელის გათბობა</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="CentralLocker" type="checkbox" class="custom-control-input" id="centralLock">
                            <label class="custom-control-label" for="centralLock">ცენტრალური საკეტი</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="Signaling" type="checkbox" class="custom-control-input" id="signalisation">
                            <label class="custom-control-label" for="signalisation">სიგნალიზაცია</label>
                        </div>
                    </div>
                    <div class="thirdside col-lg-4">
                        <div class="custom-control custom-switch">
                            <input asp-for="OnBoardComputer" type="checkbox" class="custom-control-input" id="onBoardComputer">
                            <label class="custom-control-label" for="onBoardComputer">ბორტკომპიუტერი</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="Navigation" type="checkbox" class="custom-control-input" id="navigation">
                            <label class="custom-control-label" for="navigation">ნავიგაცია</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="AirConditioner" type="checkbox" class="custom-control-input" id="conditioner">
                            <label class="custom-control-label" for="conditioner">კონდიციონერი</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="ABS" type="checkbox" class="custom-control-input" id="ABS">
                            <label class="custom-control-label" for="ABS">ABS</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="AntiSkid" type="checkbox" class="custom-control-input" id="antiSlip">
                            <label class="custom-control-label" for="antiSlip">მოცურების საწინააღმდეგო</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="ParkingControl" type="checkbox" class="custom-control-input" id="controlParking">
                            <label class="custom-control-label" for="controlParking">პარკინგკონტროლი</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input asp-for="BackViewCamera" type="checkbox" class="custom-control-input" id="rearviewCamera">
                            <label class="custom-control-label" for="rearviewCamera">უკანა ხედვის მანქანა</label>
                        </div>
                    </div>
                </div>
                <hr>
                <h1 class="titleofbuy">4. სურათები და აღწერა</h1>
                <hr>
                <input asp-for="ImageUrl1" type="file" class="custom-file-input" />
                <div class="custom-file mb-3">
                    <div class="custom-file">
                        <input type="file" onchange="readURL(this);" class="custom-file-input" id="customFile" asp-for="ImageUrl1">
                        <label class="custom-file-label" for="customFile">პირველი სურათი</label>
                    </div>
                </div>
                <div class="custom-file mb-3">
                    <input type="file" onchange="readURL2(this);" class="custom-file-input" id="customFile" asp-for="ImageUrl2">
                    <label class="custom-file-label" for="customFile">მეორე სურათი</label>
                </div>
                <div class="custom-file mb-3">
                    <input type="file" onchange="readURL3(this);" class="custom-file-input" id="customFile" asp-for="ImageUrl3">
